@using PersonalPortfolio.Components
@model PersonalPortfolio.Models.HomeIndexViewModel
@{
    ViewData["Title"] = "Nathan — Backend .NET Developer";

    var featured = Model.Projects.Where(p => p.Project.IsFeatured).ToList();
    var others   = Model.Projects.Where(p => !p.Project.IsFeatured).ToList();
}

<!-- ══════════════════════════════ HERO ══════════════════════════════ -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">

            <div class="col-lg-7">
                <p class="hero-label mb-2">Backend Developer</p>
                <h1 class="display-4 fw-bold mb-3">Nathan</h1>
                <p class="hero-description mb-4">
                    I build REST APIs with <strong>ASP.NET Core</strong> — JWT authentication,
                    role-based access control, Minimal API, EF Core.
                    Backend-focused, open to opportunities in <strong>SaaS</strong>,
                     <strong>fintech</strong>, <strong>B2B software</strong>,
                      or any <strong>backend-driven products</strong>.
                </p>
                <div class="stack-line mb-5">
                    <span class="stack-badge badge-csharp">C#</span>
                    <span class="stack-badge badge-dotnet">ASP.NET Core</span>
                    <span class="stack-badge badge-ef">EF Core</span>
                    <span class="stack-badge badge-pg">SQLite / PostgreSQL</span>
                    <span class="stack-badge badge-jwt">JWT</span>
                    <span class="stack-badge badge-rest">REST / Minimal API</span>
                    <span class="stack-badge badge-test">xUnit</span>
                </div>
                <a href="#projects" class="btn btn-hero me-3">
                    <i class="fas fa-code me-2"></i>View Projects
                </a>
                <a href="#contact" class="btn btn-hero-outline">Contact</a>
            </div>

            <div class="col-lg-5 d-none d-lg-flex justify-content-center">
                <div class="profile-bubble">
                    <img src="~/img/profile-img.png" alt="Nathan" />
                </div>
            </div>

        </div>
    </div>
</section>

<!-- ══════════════════════════════ PROJECTS ═════════════════════════ -->
<section id="projects" class="section-padding bg-dark-subtle">
    <div class="container">
        <h2 class="section-title mb-2">Projects</h2>
        <p class="section-subtitle mb-5">
            Backend APIs built with ASP.NET Core — source code available on GitHub.
        </p>

        <div class="row g-4">
            @foreach (var vm in featured)
            {
                <div class="col-lg-4 col-md-6">
                    <component type="typeof(ProjectCard)"
                               render-mode="Static"
                               param-Vm="vm" />
                </div>
            }
        </div>

        @if (others.Count > 0)
        {
            <div class="row g-4 mt-2">
                @foreach (var vm in others)
                {
                    <div class="col-lg-4 col-md-6">
                        <component type="typeof(ProjectCard)"
                                   render-mode="Static"
                                   param-Vm="vm" />
                    </div>
                }
            </div>
        }

    </div>
</section>

<!-- ══════════════════════════════ CONTACT ══════════════════════════ -->
<section id="contact" class="contact-section section-padding">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-6">
                <h2 class="section-title mb-2">Contact</h2>
                <p class="section-subtitle mb-4">
                    Actively looking — Montpellier / Remote / Open To Relocation.
                </p>
                <div class="contact-links">
                    <a href="mailto:gauthier.nathan.ng@gmail.com" class="contact-link">
                        <i class="fa-solid fa-envelope me-2" aria-hidden="true"></i>
                        <span>gauthier.nathan.ng@gmail.com</span>
                    </a>
                    <span class="contact-sep">·</span>
                    <a href="https://github.com/N0VAAA"
                       class="contact-link" target="_blank" rel="noopener noreferrer">
                        <i class="fa-brands fa-github me-2" aria-hidden="true"></i>GitHub
                    </a>
                    <span class="contact-sep">·</span>
                    <a href="https://www.linkedin.com/in/nathan-gauthier-b682021a8/"
                       class="contact-link" target="_blank" rel="noopener noreferrer">
                        <i class="fa-brands fa-linkedin me-2" aria-hidden="true"></i>LinkedIn
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
