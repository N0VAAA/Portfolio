@using PersonalPortfolio.Models

<div class="project-card card h-100">

    <div class="card-accent @Vm.AccentClass"></div>

    <div class="card-body d-flex flex-column">

        <div class="d-flex justify-content-between align-items-start mb-3">
            <h5 class="card-title mb-0">@Vm.Project.Title</h5>
            <span class="project-type-badge">@Vm.TypeLabel</span>
        </div>

        <p class="card-text">@Vm.Project.Description</p>

        @if (Vm.Project.Highlights.Count > 0)
        {
            <div class="tech-highlights mb-3">
                @foreach (var h in Vm.Project.Highlights)
                {
                    <div class="tech-point">
                        <i class="@h.IconClass me-2"></i>@h.Text
                    </div>
                }
            </div>
        }

        <div class="mb-3">
            @foreach (var tech in Vm.Project.Technologies)
            {
                <span class="tech-badge">@tech</span>
            }
        </div>

        <div class="card-links mt-auto">
            @if (!string.IsNullOrEmpty(Vm.Project.GitHubUrl))
            {
                <a href="@Vm.Project.GitHubUrl"
                   class="btn btn-card"
                   target="_blank" rel="noopener noreferrer">
                    <i class="fab fa-github me-1"></i>GitHub
                </a>
            }
            @if (Vm.Project.LiveUrl is not null)
            {
                <a href="@Vm.Project.LiveUrl"
                   class="btn btn-card ms-2"
                   target="_blank" rel="noopener noreferrer">
                    <i class="fas fa-external-link-alt me-1"></i>Live
                </a>
            }
        </div>

    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public ProjectCardViewModel Vm { get; set; } = default!;
}
